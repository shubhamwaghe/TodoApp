<div class="col-md-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"> <span class="glyphicon glyphicon-star" aria-hidden="true"></span> {{todo.title}} </h3>
    </div>
    <div class="panel-body todo-card-body"> {{todo.body}} </div>
      <div class="panel-footer">
      {{#link-to 'edit' todo}} 
      <div class="btn btn-warning"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>  Edit  </div> 
      {{/link-to}}
      <div class="btn btn-danger" {{action "deleteTodo" todo}} > 
	      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
      </div>
    </div>
  </div>
</div>
{{yield}}