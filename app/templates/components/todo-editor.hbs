<form {{action action-submit-success on="submit"}}>
<div class="form-group">
  <label for="title">&bull; Title: {{input value=title id="title" class="form-control" required="required"}}</label>
</div>
<div class="form-group">
  <label for="body">&bull; Body: {{textarea value=body id="body" rows=6 class="form-control" required="required"}}</label>
</div>
<div class="form-group">
  <button type="submit" class="btn btn-primary">
    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> {{btnText}}
  </button>
  <button type="button" class="btn btn-danger" value="Cancel" {{action action-submit-cancel}} >
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel
  </button>
</div>
</form>
{{yield}}
