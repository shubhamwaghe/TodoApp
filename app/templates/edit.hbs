<form {{action "updateTodo" on="submit"}}>
	<div class="form-group">
    <label for="title">&bull; Title: {{input value=model.title id="title" class="form-control" required="required"}}</label>
	</div>
	<div class="form-group">
    <label for="body">&bull; Body: {{textarea value=model.body id="body" rows=6 class="form-control" required="required"}}</label>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success">
			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update Todo
		</button>
		<button class="btn btn-danger" value="Cancel" {{action 'cancelUpdate'}} >
			<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel
		</button>
	</div>
</form>
{{yield}}
