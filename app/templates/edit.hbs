<form {{action "updateTodo" this on="submit"}}>
	<div class="form-group">
    <label for="title">Title: {{input value=model.title id="title" class="form-control" required="required"}}</label>
	</div>
	<div class="form-group">
    <label for="body">Body: {{textarea value=model.body id="body" rows=6 class="form-control" required="required"}}</label>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success">Update Todo</button>
		<input type="button" class="btn btn-danger" value="Cancel" {{action 'cancelUpdate' model}} />
	</div>
</form>
{{yield}}
