<form {{action "createTodo" on="submit"}}>
	<div class="form-group">
    <label for="title">Title: {{input value=title id="title" class="form-control" required="required"}}</label>
	</div>
	<div class="form-group">
    <label for="body">Body: {{textarea value=body id="body" rows=6 class="form-control" required="required"}}</label>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success">
			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Save Todo
		</button>
		<button class="btn btn-danger" {{action 'cancelCreate' this}} >
			<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel
		</button>
	</div>
</form>
